<launch>
    <param name="robot_description" command="$(find xacro)/xacro $(find robot_system_modelling)/urdf/xacro/assemble_car.xacro" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find robot_system_modelling)/config/mycar_config_04.rviz" required="true" />

    <!-- 添加关节状态发布节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />
    <!-- 添加机器人状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />
    <!-- 可选:用于控制关节运动的节点 -->
    <!-- <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" /> -->

    <node name="arbotix" pkg="arbotix_python" type="arbotix_driver" output="screen">
        <rosparam file="$(find robot_system_modelling)/config/control.yaml" command="load" />
        <param name="sim" value="true" />
    </node>
</launch>